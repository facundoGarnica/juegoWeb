{% extends 'base.html.twig' %}

{% block title %}Enemies index{% endblock %}

{% block body %}
    <h1>Enemies index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nombre</th>
                <th>Descripcion</th>
                <th>Vida</th>
                <th>Damage</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for enemy in enemies %}
            <tr>
                <td>{{ enemy.id }}</td>
                <td>{{ enemy.nombre }}</td>
                <td>{{ enemy.descripcion }}</td>
                <td>{{ enemy.vida }}</td>
                <td>{{ enemy.damage }}</td>
                <td>
                    <a href="{{ path('app_enemies_show', {'id': enemy.id}) }}">show</a>
                    <a href="{{ path('app_enemies_edit', {'id': enemy.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_enemies_new') }}">Create new</a>
    <a href="{{ path('app_formularios') }}">Volver al inicio</a>
{% endblock %}
